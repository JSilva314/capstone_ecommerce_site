generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int            @id @default(autoincrement())
  username      String?
  password      String
  email         String         @unique
  address       String?
  Phone         BigInt?
  paymentMethod String?
  Admin         Boolean        @default(false)
  orders        orderHistory[]
  Cart          Cart[]
}

model Cars {
  id       Int            @id @default(autoincrement())
  make     String
  model    String
  newUsed  Boolean
  color    String
  year     Int
  bodyType String
  image    String
  price    Int
  vin      String         @unique
  orders   orderHistory[]
  Cart     Cart[]
}

model orderHistory {
  orderId       Int      @id @default(autoincrement())
  car           Cars     @relation(fields: [carId], references: [id])
  user          Users    @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())
  paymentMethod String
  email         String
  address       String
  carId         Int
  userId        Int
}

model Cart {
  id     Int   @id @default(autoincrement())
  user   Users @relation(fields: [userId], references: [id])
  car    Cars  @relation(fields: [carId], references: [id])
  price  Int
  carId  Int
  userId Int

  @@map(name: "cart_car_fk")
}
